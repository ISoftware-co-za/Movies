<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="TopAppBar" TargetType="CommandBar">
        <Setter Property="Background" Value="#0000FF" />
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="FontSize" Value="18" />
    </Style>

    <Style x:Key="PageGrid" TargetType="Grid">
        <Setter Property="Background" Value="#C0C0C0" />
        <Setter Property="Padding" Value="8" />
    </Style>

    <Style x:Key="MovieSearchResultTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="MovieSearchResultYearAndGenre" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="#808080" />
    </Style>

    <Style x:Key="MovieAttributeLabel" TargetType="TextBlock">
        <Setter Property="FontSize" Value="10" />
        <Setter Property="Opacity" Value=".5" />
    </Style>

    <Style x:Key="MovieAttributeValue" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="Plot" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="TextWrapping" Value="WrapWholeWords" />
    </Style>

</ResourceDictionary>
